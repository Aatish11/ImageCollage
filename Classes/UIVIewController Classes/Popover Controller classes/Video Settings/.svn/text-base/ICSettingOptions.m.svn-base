#pragma mark - Table view delegate

- (void)tableView:(UITableView *)tableView didSelectRowAtIndexPath:(NSIndexPath *)indexPath
{
    if (self.delegate != nil)
	{
        [self dismissModalViewControllerAnimated:YES];
		NSString *effectSelected = [self.optionArrayList objectAtIndex:indexPath.row];    
        [self.delegate selectedTransitionEffect:effectSelected withRow:indexPath.row];
	}
}

//This array list must tally exactly with eTransitionEffects enum values
-(NSMutableArray *)getArrayList
{
    NSMutableArray *arr = [[NSMutableArray alloc] init];
	[arr addObject:@"None"];
    [arr addObject:@"Shrink"];
    [arr addObject:@"Dissolve"];
    [arr addObject:@"Wipe"];
    [arr addObject:@"Crush"];
    return [arr autorelease];
}

