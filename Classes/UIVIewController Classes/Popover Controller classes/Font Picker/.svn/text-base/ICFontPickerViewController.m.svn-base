#pragma mark -
#pragma mark Table view delegate

- (void)tableView:(UITableView *)tableView didSelectRowAtIndexPath:(NSIndexPath *)indexPath {
    if (self.fontDelegate != nil)
	{
		NSString *familyName = [self fontFamilyForSection:indexPath.section];
		NSString *fontName = [self selectedFontName:indexPath.row inFamily:familyName];
		[self.fontDelegate sendFont:self didSelectFont:fontName];
	}
	
}


